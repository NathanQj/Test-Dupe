<odoo>
    <data>
        <record id="view_sms_opt_out_config" model="ir.ui.view">
            <field name="name">res.config.settings.form.inherit.sms.optout</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='social_default_image_setting']" position="after">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="enable_opt_out"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_opt_out"/>
                            <div class="text-muted">
                                Allow Opt-out to Portal Users
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
