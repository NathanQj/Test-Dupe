<odoo>
    <data>
        <template id="assets_frontend" name="sms_opt_out assets" inherit_id="web.assets_frontend">
            <xpath expr="//link[last()]" position="after">
                <link rel="stylesheet" type="text/scss" href="/sms_opt_out/static/src/scss/sms_opt_out.scss"/>
            </xpath>
        </template>

        <template id="wk_contact_opt_out" inherit_id="portal.portal_layout" priority="10">
            <xpath expr="//div[hasclass('o_portal_my_details')]" position="after">
                <t t-if="sms_enable_opt_out">
                    <div class="oe_wk_optout_menu">
                        <span class="fa fa-envelope-open" title="SMS Templates"/>
                        <a href="/sms_opt_out">
                            SMS Opt-out
                        </a>
                    </div>
                </t>
            </xpath>
        </template>

        <template id="wk_sms_portal_my_home_menu_sale" name="Portal layout : SMS Opt-out entries" inherit_id="portal.portal_breadcrumbs" priority="20">
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li t-if="page_name == 'sms_optout_templates'" t-attf-class="breadcrumb-item #{'active ' if page_name == 'sms_optout_templates' else ''}">
                    <span>SMS Opt-Out</span>
                </li>
            </xpath>
        </template>

        <template id="sms_opt_out_template" name="SMS Opt-out">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">SMS Opt-Out</t>
                </t>
                <div class="wk_sms_view">
                    <div class="wk_sms_content">
                        <div class="oe_wk_headings">
                            <p class="oe_wk_heading_1">Choose Which SMS Alerts You Would Like To Receive From Us</p>
                        </div>
                        <form id="wk_sms_opt_out_form" action="/sms_opt_out/submit" method="post">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            <div class="row">
                                <t t-set="wk_color_selector" t-value="0"/>
                                <div class="wk_temp_box col-xl-4 col-sm-6">
                                    <div class="wk_checkbox_box">
                                        <div class="wk_template_help" t-att-title="promotional_optout[3]">?</div>
                                        <div t-att-class="'wk_checkbox_content %s' % ('wk_odd_color' if wk_color_selector else '')">
                                            <div class="wk_checkbox">
                                                <input class="oe_wk_template_input" type="checkbox" t-att-id="promotional_optout[0]" t-att-name="promotional_optout[0]" t-att-checked="promotional_optout[2]"/>
                                                <label t-att-for="promotional_optout[0]"/>
                                            </div>
                                            <label class="oe_wk_template_name" t-att-for="promotional_optout[0]">
                                                <t t-esc="promotional_optout[1]"/>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <t t-foreach="temp_list" t-as="temp">
                                    <t t-set="wk_color_selector" t-value="not wk_color_selector"/>
                                    <div class="wk_temp_box col-xl-4 col-sm-6">
                                        <div class="wk_checkbox_box">
                                            <div class="wk_template_help" t-att-title="temp[3]">?</div>
                                            <div t-att-class="'wk_checkbox_content %s' % ('wk_odd_color' if wk_color_selector else '')">
                                                <div class="wk_checkbox">
                                                    <input class="oe_wk_template_input" type="checkbox" t-att-id="temp[0]" t-att-name="temp[0]" t-att-checked="temp[2]"/>
                                                    <label t-att-for="temp[0]"/>
                                                </div>
                                                <label class="oe_wk_template_name" t-att-for="temp[0]">
                                                    <t t-esc="temp[1]"/>
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                            <div class="clearfix">
                                <button type="submit" class="btn btn-primary float-right mb32 oe_wk_submit">
                                    Done
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </t>
        </template>

        <template id="sms_opt_out_submit_template" name="SMS Opt-out Submit">
            <t t-call="portal.portal_layout">
                <t t-set="breadcrumbs_searchbar" t-value="True"/>
                <t t-call="portal.portal_searchbar">
                    <t t-set="title">Submit</t>
                </t>
                <div id="wk_submit_view">
                    <div class="wk_submit_box">
                        <div class="wk_submit_content">
                            <img src="/sms_opt_out/static/src/img/icon-success.png" alt="Success!!!"/>
                            <p class="wk_submit_heading">Successful !!</p>
                            <p class="wk_submit_message">Selected SMS alert have been <br/> succesfully added</p>
                        </div>
                        <div class="wk_return_button">
                            <a href="/my/home" role="button" class="btn btn-success">Continue</a>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
