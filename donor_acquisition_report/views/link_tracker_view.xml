<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_link_tracker_form_inherited_cap" model="ir.ui.view">
        <field name="name">link.tracker.form.inherited.cap</field>
        <field name="model">link.tracker</field>
        <field name="inherit_id" ref="link_tracker.view_link_tracker_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[2]" position="after">
                <notebook>
                    <page string="Advertise Amount" name="advertise_amount">
                        <field name="advertise_amt_line"
                               widget="one2many_list">
                            <tree string="Advertise Amount" editable="bottom">
                                <field name="advertise_date"/>
                                <field name="amount" />

                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

</odoo>