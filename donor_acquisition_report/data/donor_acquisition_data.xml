<?xml version="1.0" encoding='UTF-8'?>
<odoo>
    <record id="donor_acquisition_cron" model="ir.cron">
        <field name="name">Donor Acquisition</field>
        <field name="model_id" ref="model_donor_acquisition_report"/>
        <field name="state">code</field>
        <field name="code">model._cron_generate_data()</field>
        <field name="interval_number">15</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <record id="update_stage_cron" model="ir.cron">
        <field name="name">Historic Values for Reporting</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="state">code</field>
        <field name="code">model._update_stages()</field>
        <field name="interval_number">15</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
    </record>

    <record id="crm_creation_rec" model="base.automation">
        <field name="name">CRM Creation</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="state">code</field>
        <field name="trigger">on_create</field>
        <field name="active" eval="True"/>
        <field name="code">
records.partner_id.write({'registration_complete': True})
        </field>
    </record>

    <record id="partner_visited_rec" model="base.automation">
        <field name="name">Partner Visited</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="state">code</field>
        <field name="trigger">on_write</field>
        <field name="active" eval="True"/>
        <field name="code">
if records.stage_id.name == 'Donor Checked-In to NextGen ':
    records.partner_id.write({'visit_started': True})
        </field>
    </record>

    <record id="screening_complete_rec" model="base.automation">
        <field name="name">Screening complete</field>
        <field name="model_id" ref="__export__.ir_model_194_ddfde5ed"/>
        <field name="state">code</field>
        <field name="trigger">on_create</field>
        <field name="active" eval="True"/>
        <field name="code">
donation_id = env['x_donation_appointment'].search([('x_Contact', '=', records.x_Contact.id), ('x_total_screen', '>', 0)], limit=1)
if donation_id:
    donation_id.x_Contact.write({'screening_complete': True})
        </field>
    </record>

    <record id="physical_complete_rec" model="base.automation">
        <field name="name">Physical Complete</field>
        <field name="model_id" ref="crm.model_crm_lead"/>
        <field name="state">code</field>
        <field name="trigger">on_write</field>
        <field name="active" eval="True"/>
        <field name="code">
if records.stage_id.name == 'Physical Passed':
    records.partner_id.write({'physical_complete': True})
        </field>
    </record>

    <record id="donation_complete_rec" model="base.automation">
        <field name="name">Donation complete</field>
        <field name="model_id" ref="__export__.ir_model_194_ddfde5ed"/>
        <field name="state">code</field>
        <field name="trigger">on_create</field>
        <field name="active" eval="True"/>
        <field name="code">
if records.x_complete == 'Yes':
    records.x_Contact.write({'donation_complete': True})
        </field>
    </record>

    <record id="multiple_donation_complete_rec" model="base.automation">
        <field name="name">Multiple donation complete</field>
        <field name="model_id" ref="__export__.ir_model_194_ddfde5ed"/>
        <field name="state">code</field>
        <field name="trigger">on_create</field>
        <field name="active" eval="True"/>
        <field name="code">
if records.x_complete == 'Yes' and records.x_Contact.donation_complete:
    records.x_Contact.write({'multiple_donations_complete': True})
        </field>
    </record>
</odoo>